extends ./layout.jade

mixin renderNewsItems()
  - var columnSize = 4, elementsInRow = 12/columnSize 
  each _, x in newsContent
    if (x % elementsInRow === 0)
      .row
        each newsItem, y in newsContent.slice(x, x + elementsInRow)
          .small-12.medium-12.large-4.columns
            .news-item
              .news-image
                img(src="http://lorempixel.com/240/78/cats/", alt="Hello News")
              .news-text
                h3: a(id="news-title", href="/news/#{newsItem._id}") #{newsItem.title}
                p #{newsItem.body}

block content
  .row.clearfix
    if !user
      a(id="login-button", href="/login", class='button radius tiny') Login
    else
      a(id="admin-button", href="/new_news", class='button radius tiny') Post News Article
      a(id="logout-button", href="/logout", class='button radius tiny') Logout
  .row
    .content-block
      +renderNewsItems


