extends ./layout.jade

block content
  .content-block
    .row
      .small-12.medium-12.large-12.columns
        .news-form
          form(method='post', action='/news/#{newsItem._id}?_method=PUT')
            input(type="hidden", name="_method", value="PUT")
            label(for='title') Title
            input(type='text', name='title', id='title',value='#{newsItem.title}')
            label(for='author') Author
            input(type='text', name='author', id='author', value='#{newsItem.author}')
            label(for='body') Body
            textarea(name='body', value='', id='body', rows='20') #{newsItem.body}
            input(type='submit', name='update', value='Update', class='button radius small')#update_button
